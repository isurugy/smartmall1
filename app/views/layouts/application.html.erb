<!DOCTYPE html>
<html>
  <head>
    <title>Smartmall</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "//maxcdn.bootstrapcdn.com/font-awsome/4.3.0/css/font-awsome.min.css" %>
  </head>

  <body>
    <%= render 'layouts/nav' %>


    <% flash.each do |key,value| %>
      <div class="text-center <%= flash_class(key) %>">
        <%= value %>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
